*
	box-sizing border-box
html
	font-family font-family
	font-size font-size
	color text-color

.container
	width percentage(1220px/full-width)
	margin-left percentage(68px/full-width)
	padding 64px 0 104px 0
	display flex
	flex-direction row
	justify-content space-between
	flex-wrap wrap
	@media screen and (max-width: 1042px)
		padding 50px 0 70px 0

.left-column
	width percentage(450px/1220px)
	display flex
	flex-direction column
	justify-content flex-start
	@media screen and (max-width: 1042px)
		width 100%

.right-column
	width percentage(685px/1220px)
	display flex
	flex-direction column
	justify-content space-between
	@media screen and (max-width: 1042px)
		width 100%

h1, h2, h3, p
	margin 0

p
	line-height (20px/font-size)rem
h2
	font-size h2-size
	@media screen and (max-width: 1200px)
		font-size h2-size*0.8
h3
	font-size h3-size
	font-weight normal
	@media screen and (max-width: 1200px)
		font-size h3-size*0.8