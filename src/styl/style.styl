*
	box-sizing border-box
html
	font-family font-family
	font-size font-size
	color text-color

.container
	width 100%
	margin 0 auto
	padding 84px 0 104px 0

.container::after
	content ""
	display table
	clear both

.left-column
	width percentage(449px/full-width)
	margin-left percentage(68px/full-width)
	margin-right percentage(84px/full-width)
	float left

.right-column
	width percentage(685px/full-width)
	float left

h1, h2, h3, p
	margin 0

p
	line-height 20px
h2
	font-size h2-size
h3
	font-size h3-size
	font-weight normal