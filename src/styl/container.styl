    width 100%

.container__right-column
  width 56.393442622950815%
  display flex
  flex-direction column
  justify-content flex-start
  @media screen and (max-width: screen-lg)
    width 100%

.container__header
  margin block-margin-top 0
  padding-left 3.797524907295715%
  @media screen and (max-width: screen-lg)
