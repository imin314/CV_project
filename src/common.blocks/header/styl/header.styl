@import '../../../styles/variables.styl'

.header
  &__photo
    width 14.88981537rem
    height @width
    margin 0 auto
    background color-main no-repeat
    background-size cover
    border 0.893388922rem solid white
    border-radius 50%
    box-shadow 0 0 0 2px color-main

  &__name
    margin-top 1.6rem
    text-align center
    text-transform uppercase

  &__firstname
    font normal 3.6rem/0.97 font-family
    letter-spacing -0.05rem

  &__lastname
    font bold 3.8rem/0.95 font-family
    letter-spacing 0.2rem
    word-wrap break-word

  &__job-title
    margin-top 0.7rem
    font bold 1.6rem/1 font-family
    text-align center
    text-transform uppercase
