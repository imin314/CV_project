.container
  width 90.7%
  margin-left 4.8%
  padding 3.8rem 0 3.1rem 0
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap

  &__left-column
    width 36.7%
    display flex
    flex-direction column
    justify-content flex-start
    @media screen and (max-width: screen-lg)
      width 100%

  &__right-column
    width 56.2%
    display flex
    flex-direction column
    justify-content flex-start
    @media screen and (max-width: screen-lg)
      width 100%

  &__header
    margin 2.02501489rem 0
    padding-left 3.797524907295715%
    @media screen and (max-width: screen-lg)
      margin 0

  &__contact, &__profile, &__skills, &__experience, &__software
    margin-top 2.02501489rem

  &__education
    @media screen and (max-width: screen-lg)
      margin-top 2.02501489rem