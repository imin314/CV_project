.list__item
	list-style none
	position relative
	margin-left percentage(55px/681.438px)
	margin-top (16px/font-size)rem

.list__item::before
	content ""
	position absolute
	border-radius 50%
	width w=(21.75px/font-size)rem
	height @width
	top t=(5px/font-size)rem
	left l=(-44px/font-size)rem
	background-color text-color
	@media screen and (max-width: 1200px)
		width w*0.8
		height @width
		top t*0.8
		left l*0.8

.list-item:first-child
	margin-top 0